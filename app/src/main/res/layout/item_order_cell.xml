<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/text_white"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/base_bg"></LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/base_line" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单号:"
                android:textColor="@color/main_color"
                android:textSize="@dimen/textsize_m" />

            <TextView
                android:id="@+id/tv_order_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv1"
                android:singleLine="true"
                android:text="123412341234"
                android:textColor="@color/main_color"
                android:textSize="@dimen/textsize_m" />

            <TextView
                android:id="@+id/tv_order_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="已接单"
                android:textColor="@color/main_color"
                android:textSize="@dimen/textsize_m" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginTop="5dp"
            android:background="@color/main_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/tv_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="张先生"
                        android:textSize="@dimen/textsize_l" />

                    <ImageView
                        android:id="@+id/iv_phone"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="30dp"
                        android:layout_toRightOf="@+id/tv_username"
                        android:src="@mipmap/icon_phone" />

                    <TextView
                        android:id="@+id/tv_expected_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="2015-08-20"
                        android:textColor="@color/text_gary"
                        android:textSize="@dimen/textsize_l" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/tv_service_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="内洗"
                        android:textSize="@dimen/textsize_l" />

                    <TextView
                        android:id="@+id/tv_carbrand_carype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:text="奥迪A30"
                        android:textColor="@color/text_gary"
                        android:textSize="@dimen/textsize_l" />

                    <TextView
                        android:id="@+id/tv_car_model"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:text="轿车"
                        android:textColor="@color/text_gary"
                        android:textSize="@dimen/textsize_l" />

                    <TextView
                        android:id="@+id/tv_car_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:text="豫A66666"
                        android:textColor="@color/text_gary"
                        android:textSize="@dimen/textsize_l" />

                    <TextView
                        android:id="@+id/tv_car_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:text="白色"
                        android:textColor="@color/text_gary"
                        android:textSize="@dimen/textsize_l" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="郑州市金水区花园路与农业路交叉口100米路东兴业大厦幸福公寓"
                    android:textColor="@color/text_gary"
                    android:textSize="@dimen/textsize_l" />

                <LinearLayout
                    android:id="@+id/ll_service_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="增值服务项:"
                        android:textColor="@color/text_gary"
                        android:textSize="@dimen/textsize_l" />

                    <TextView
                        android:id="@+id/tv_service_added"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="内洗 + 外洗"
                        android:textColor="@color/text_gary"
                        android:textSize="@dimen/textsize_l" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="金额:"
                        android:textColor="@color/text_gary"
                        android:textSize="@dimen/textsize_l" />

                    <TextView
                        android:id="@+id/tv_service_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="￥ 25"
                        android:textColor="@color/text_gary"
                        android:textSize="@dimen/textsize_l" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="5dp">

                    <Button
                        android:id="@+id/btn_finish"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/btn_main_color"
                        android:text="完成"
                        android:textColor="@color/text_white"
                        android:textSize="@dimen/textsize_l" />

                    <Button
                        android:id="@+id/btn_order_zhuan"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/btn_finish"
                        android:background="@drawable/btn_grey"
                        android:text="转单"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/textsize_l" />

                    <Button
                        android:id="@+id/btn_order_kill"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/btn_order_zhuan"
                        android:background="@drawable/btn_grey"
                        android:text="消单"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/textsize_l" />
                </RelativeLayout>

            </LinearLayout>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@mipmap/icon_right" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>