<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_app_dialog"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:singleLine="true"
        android:text="fdsafdsafdsa"
        android:textColor="#333333"
        android:textSize="@dimen/textsize_xl" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:text="发大水范德萨范德萨"
        android:textColor="#333333"
        android:textSize="@dimen/textsize_l" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp">

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignParentTop="true"
            android:background="@color/base_line" />

        <View
            android:id="@+id/view_vertical"
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="1dp"
            android:background="@color/base_line"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="1dp"
            android:layout_toLeftOf="@id/view_vertical"
            android:gravity="center"
            android:text="更新"
            android:textColor="#3c7800"
            android:textSize="@dimen/textsize_l" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@id/view_vertical"
            android:gravity="center"
            android:text="取消"
            android:textColor="#333333"
            android:textSize="@dimen/textsize_l" />
    </RelativeLayout>

</LinearLayout>